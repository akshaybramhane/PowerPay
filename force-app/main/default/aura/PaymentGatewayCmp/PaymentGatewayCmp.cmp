<aura:component controller="PaymentGatewayController" implements="flexipage:availableForAllPageTypes,force:appHostable">
    <div class="slds-grid slds-grid_vertical-align-center slds-grid_align-center" style="height:600px">
        <div class="slds-col">
            <div class="slds-box slds-theme_default" style="border:2px Solid BLACK;width:250px;height:475px">
                <h2 style="text-align:center;font-size:24px;">Power Pay</h2>
                <br/>
            		<article class="slds-card">
                    <div class="slds-card__header slds-grid">
                        <header class="slds-media slds-media_center slds-has-flexi-truncate">
                            <div class="slds-media__body">
                                <h2 class="slds-card__header-title">    
                                    <div style="text-align:center"><span>Pay Via</span></div>
                                </h2>
                            </div>
                        </header>
                    </div>
                    <div class="slds-card__body slds-card__body_inner" style="padding-top:10px;text-align:center">
                        <div class="slds-grid slds-grid_vertical">
                            <div class="slds-col" style="padding-top:10px">
                                <button class="slds-button slds-button_neutral" style="width:150px" onclick="{!c.payViaPaytm}">Paytm</button>
                            </div>
                            <div class="slds-col" style="padding-top:10px">
                                <button class="slds-button slds-button_neutral" style="width:150px" onclick="{!c.payViaGPay}">Google Pay</button>
                            </div>
                            <div class="slds-col" style="padding-top:10px">
                                <button class="slds-button slds-button_neutral" style="width:150px" onclick="{!c.payViaAmzPay}">Amazon Pay</button>
                            </div>
                            <div class="slds-col" style="padding-top:10px">
                                <button class="slds-button slds-button_brand" style="width:150px">Next</button>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>   
</aura:component>